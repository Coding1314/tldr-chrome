{
  "manifest_version": 2,
  "name": "tldr-chrome",
  "version": "0.2.0",
  "description": "Simplified and community-driven man pages for chrome",
  "author": "Tom Hill",
  "homepage_url": "https://tldr.sh",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "marked.js",
        "main.js"
      ],
      "css": [
        "styles/main.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "web_accessible_resources": [
    "fonts/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
